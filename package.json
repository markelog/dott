{
  "name": "dott",
  "version": "0.0.2",
  "description": "Gets the distance to the nearest white pixel",
  "private": true,
  "author": "Oleg \"Who's got the Courvoisi'?!\" Gaidarenko",
  "license": "MIT",
  "engines": {
    "node": ">=12"
  },
  "bin": {
    "dott": "dist/cli/index.js"
  },
  "scripts": {
    "eslint": "eslint src/**/*.ts",
    "eslint:fix": "npm run eslint -- --fix",
    "prettier": "prettier --ignore-path=.gitignore --check 'src/**/*.ts'",
    "prettier:fix": "prettier --ignore-path=.gitignore --write 'src/**/*.ts'",
    "lint": "npm run eslint && npm run prettier",
    "lint:fix": "npm run eslint:fix && npm run prettier:fix",
    "test": "npm run lint && npm run jest",
    "jest": "jest",
    "test:coverage": "npm run lint && npm run jest:coverage",
    "jest:coverage": "npm run jest -- --coverage",
    "dev": "ts-node src/cli/index.ts",
    "build": "npx tsc",
    "link": "NODE_ENV=production npm run build",
    "prepublishOnly": "NODE_ENV=production npm run build"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@types/node": "^16.0.1",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "coveralls": "^3.1.1",
    "eslint": "^7.30.0",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@tsconfig/node12": "^1.0.9",
    "@types/yargs": "^17.0.2",
    "chalk": "^4.1.1",
    "yargs": "^17.0.1"
  }
}
